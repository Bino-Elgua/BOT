# BOT Application Environment Configuration
# Copy this file to .env and replace ðŸ”‘ placeholders with actual values

# Environment
ENVIRONMENT=development

# Security Configuration
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=ðŸ”‘ SECRET_KEY

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=ðŸ”‘ DATABASE_URL

# Redis Configuration  
# Format: redis://username:password@host:port/db
REDIS_URL=ðŸ”‘ REDIS_URL
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5.0
REDIS_SOCKET_CONNECT_TIMEOUT=5.0

# Application Settings
APP_NAME=BOT
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# WebSocket Configuration
WEBSOCKET_MAX_MESSAGE_SIZE=16384
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=60

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=20

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=0.1

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s